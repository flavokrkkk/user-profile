{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES2022",
    "types": ["node"],
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["ES2015", "ES2017", "DOM", "WebWorker"],
    "outDir": "dist",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strict": true,
    "downlevelIteration": true,
    "baseUrl": "./",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@assets/*": ["./src/assets/*"],
      "@locales/*": ["./src/locales/*"],
      "@mocks/*": ["./src/mocks/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages/*": ["./src/pages/*"],
      "@models/*": ["./src/models/*"],
      "@redux/*": ["./src/redux/*"],
      "@routes/*": ["./src/routes/*"],
      "@store/*": ["./src/store/*"],
      "@tools/*": ["./src/tools/*"],
      "@views/*": ["src/views/*"],
      "@public/*": ["/public/*"],
      "@src/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  }
}
